{
    "name": "zalas/bundle-test",
    "description": "Tools for testing Symfony Bundles",
    "type": "library",
    "require": {
        "php": "^7.1",
        "symfony/http-kernel": "^3.4 || ^4.0",
        "symfony/dependency-injection": "^3.4 || ^4.0",
        "symfony/config": "^3.4 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "zalas/phpunit-globals": "^1.0"
    },
    "autoload": {
        "psr-4": { "Zalas\\BundleTest\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Zalas\\BundleTest\\Tests\\": "tests/" }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Zalas",
            "email": "jakub@zalas.pl"
        }
    ]
}
